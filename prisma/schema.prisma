generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  googleId      String     @unique
  email         String     @unique
  name          String
  taxId         String? 
  phoneNumber   String?
  ownedStores   Store[]    @relation("OwnedStores")
  adminStores   Store[]    @relation("AdminStores")
}

model Store {
  id         String     @id @default(cuid())
  name       String
  address    String
  revenue    Float

  owner      User[]     @relation("OwnedStores")
  admin      User[]     @relation("AdminStores")
  quote      Quote[]
  products   Product[]
  customers  Customer[]
}

model Product {
  id            String          @id @default(cuid())
  name          String
  price         Float
  storeId       String
  store         Store           @relation(fields: [storeId], references: [id])
  quoteProducts QuoteProduct[]
}

enum Status {
  unpaid
  paid
}

model Quote {
  id          String          @id @default(cuid())
  total       Float
  orderDate   String
  shippingOn  String?
  status      Status
  customerId  String
  customer    Customer        @relation(fields: [customerId], references: [id])
  storeId     String
  store       Store           @relation(fields: [storeId], references: [id])
  products    QuoteProduct[]
}

model QuoteProduct {
  id         String         @id @default(cuid())
  quoteId    String
  quote      Quote          @relation(fields: [quoteId], references: [id])
  productId  String
  product    Product        @relation(fields: [productId], references: [id])
  quantity   Int
}

model Customer {
  id         String     @id @default(cuid())
  name       String
  address    String
  storeId    String
  store      Store      @relation(fields: [storeId], references: [id])
  quotes     Quote[]
}
