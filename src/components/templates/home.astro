---
import Header from "@/components/organisms/header.vue";
import Card from "@/components/organisms/card.vue";
import NewStore from "@/components/organisms/card-newstore.vue";
import type { Store, User } from "@/lib/shared";
import { trpc } from "@/lib/trpc";

const { userId } = Astro.props as { userId: string };

let stores: Store[] = [];
let user!: User;
  user = await trpc.user.getById.query(userId);
  stores = await trpc.store.getByOwnerId.query(userId);
---

<Header client:load />
<div class="home-section">
  <div class="head-container">
    <h1>{user.name}</h1>
  </div>
  <div class="store-container">
    {stores.map((store) => <Card client:load store={store} />)}
    <NewStore client:load userId={userId} />
  </div>
</div>

<style scoped>
  h1 {
    text-align: start;
    font-family: Righteous;
    font-size: 48px;
  }
  .home-section {
    display: flex;
    padding: 20px 80px 40px 80px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    width: 100%;
  }
  .head-container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: space-between;
    align-items: center;
  }
  .store-container {
    display: grid;
    width: 100%;
    justify-content: center;
    align-items: center;
    gap: 16px;
    grid-template-columns: repeat(auto-fit, minmax(240px, 240px));
  }
  @media (max-width: 440px) {
    .home-section {
      padding: 20px 20px;
    }
  }
</style>
