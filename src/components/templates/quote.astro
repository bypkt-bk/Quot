---
import Navigation from "@/components/organisms/navigation.vue";
import QuoteData from "@/components/organisms/quote-table.tsx";
import SelectTable from "@/components/organisms/selectproduct-table";
import { Status } from "@/lib/shared";
import Header from "../organisms/header.vue";
import type { Product, Quote, Store } from "@/lib/shared";
import { trpc } from "@/lib/trpc";
const quoteId = Astro.params.quote_id as string;
let quote!: Quote;
try {
  quote = await trpc.quote.getById.query(quoteId);
} catch (e) {
  console.error("Error fetching quote data:", e);
}

let product: Product[] = [];
try {
  product = await trpc.product.getByStore.query(quote.storeId);
} catch (e) {
  console.error("Error fetching product data:", e);
}
---

<Header client:load />
<div class="store-cotainer">
  <div class="navigation">
    <Navigation client:load storeId={quote.storeId} />
  </div>
  <div class="workspace">
    <div class="data-container">
      <QuoteData client:load quote={quote} />
    </div>
    <div class="item-container">
      <SelectTable client:load products={product} quote={quote} />
    </div>
  </div>
</div>

<style>
  .store-cotainer {
    display: flex;
    padding: 40px 80px 0px 80px;
    justify-content: center;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
    width: 100%;
  }
  .workspace {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: center;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
  }
  .data-container {
    max-width: 800px;
    flex: 1 0 0;
  }
  .item-container {
    max-width: 400px;
  }
  .item-container,
  .data-container {
    display: flex;
    width: 100%;
    min-width: 400px;
    padding: 40px;
    flex-direction: column;
    align-items: flex-start;
    border-radius: 20px;
    border: 1px solid #3c3c3c;
    background: #242424;
  }
  @media (max-width: 1075px) {
    .store-container {
      padding: 20px;
    }

    .data-container,
    .item-container {
      max-width: 100%;
      min-width: 100%;
    }
  }

  @media (max-width: 440px) {
    .data-container,
    .item-container {
      padding: 20px;
    }
  }
  @media (max-width: 563px) {
    .store-cotainer {
      padding: 10px 10px;
      flex-wrap: wrap;
    }
  }
  @media (max-width: 454px) {
    .navigation {
      overflow-x: scroll;
    }
    .navigation::-webkit-scrollbar {
      display: none;
    }
  }
</style>
