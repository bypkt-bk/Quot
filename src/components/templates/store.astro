const store: Store = {
  id: 1,
  name: "Gadget Galaxy",
  address: "123 Tech Avenue, Bangkok",
  revenue: 500000,

  owner: [
    {
      id: 101,
      googleId: "google-101",
      email: "alice@example.com",
      name: "Alice",
      taxId: "1234567890123",
      phoneNumber: "0812345678",
      ownedStores: [], // เวลาทำ mock ไม่ต้องใส่ซ้ำ
      adminStores: [],
    },
  ],

  admin: [
    {
      id: 102,
      googleId: "google-102",
      email: "bob@example.com",
      name: "Bob",
      taxId: null,
      phoneNumber: null,
