    },
  ],

  quote: [
    {
      id: 1,
      total: 10000,
      orderDate: "2025-04-10",
      shippingOn: "2025-04-12",
      status: Status.paid,
      customerId: 201,
      storeId: 1,
      customer: {
        id: 201,
        name: "Charlie",
        address: "Pattaya, Thailand",
        storeId: 1,
        store: {} as Store, // หลีกเลี่ยง recursion
        quotes: [],
      },
      store: {} as Store, // จะถูกแทนด้วย store ตัวนี้
